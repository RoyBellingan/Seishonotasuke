bottomNav('<a href="chapter_026.htm"><img src="/images/arrow_white_prev.gif" alt="Capitolo precedente" width="12" height="15" border="0"><\/a>', '<a href="chapter_028.htm"><img src="/images/arrow_white_next.gif" alt="Capitolo successivo" width="12" height="15" border="0"><\/a>', 'pr', '27');
// -->
</script>

