bottomNav('<a href="chapter_011.htm"><img src="/images/arrow_white_prev.gif" alt="Capitolo precedente" width="12" height="15" border="0"><\/a>', '<a href="chapter_013.htm"><img src="/images/arrow_white_next.gif" alt="Capitolo successivo" width="12" height="15" border="0"><\/a>', 'lu', '12');
// -->
</script>

<noscript>
