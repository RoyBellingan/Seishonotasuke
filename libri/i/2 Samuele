bottomNav('<a href="chapter_022.htm"><img src="/images/arrow_white_prev.gif" alt="Capitolo precedente" width="12" height="15" border="0"><\/a>', '<a href="chapter_024.htm"><img src="/images/arrow_white_next.gif" alt="Capitolo successivo" width="12" height="15" border="0"><\/a>', '2sa', '23');
// -->
</script>

<noscript>
