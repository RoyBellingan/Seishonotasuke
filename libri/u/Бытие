bottomNav('<a href="chapter_005.htm"><img src="/images/arrow_white_prev.gif" alt="Предыдущая глава" width="12" height="15" border="0"><\/a>', '<a href="chapter_007.htm"><img src="/images/arrow_white_next.gif" alt="Следующая глава" width="12" height="15" border="0"><\/a>', 'ge', '6');
