bottomNav('<a href="chapter_001.htm"><img src="/images/arrow_white_prev.gif" alt="Предыдущая глава" width="12" height="15" border="0"><\/a>', '<a href="chapter_003.htm"><img src="/images/arrow_white_next.gif" alt="Следующая глава" width="12" height="15" border="0"><\/a>', 'isa', '2');
