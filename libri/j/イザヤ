bottomNav('<a href="chapter_053.htm"><img src="/images/arrow_white_prev.gif" alt="前の章へ" width="12" height="15" border="0"><\/a>', '<a href="chapter_055.htm"><img src="/images/arrow_white_next.gif" alt="次の章へ" width="12" height="15" border="0"><\/a>', 'isa', '54');
// -->
</script>

