bottomNav('<a href="chapter_021.htm"><img src="/images/arrow_white_prev.gif" alt="前の章へ" width="12" height="15" border="0"><\/a>', '<a href="chapter_023.htm"><img src="/images/arrow_white_next.gif" alt="次の章へ" width="12" height="15" border="0"><\/a>', 'isa', '22');
// -->
</script>

