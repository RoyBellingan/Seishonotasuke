      } else {
    		window.location.href = "http://www.watchtower.org/j/";
 		   var objMsgWindow = window.open( "/j/bible/v3msg.htm","","top=120,left=180,height=120,width=350,status=no,toolbar=no,menubar=no,location=no,resizable=no,scrollbars=auto");
          if(objMsgWindow.focus){
               objMsgWindow.focus();
           }
	}
//-->
     </script>
