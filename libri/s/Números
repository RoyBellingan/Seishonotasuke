bottomNav('<a href="chapter_033.htm"><img src="/images/arrow_white_prev.gif" alt="Capítulo anterior" width="12" height="15" border="0"><\/a>', '<a href="chapter_035.htm"><img src="/images/arrow_white_next.gif" alt="Siguiente capítulo" width="12" height="15" border="0"><\/a>', 'nu', '34');
