bottomNav('<a href="chapter_017.htm"><img src="/images/arrow_white_prev.gif" alt="Capítulo anterior" width="12" height="15" border="0"><\/a>', '<a href="chapter_019.htm"><img src="/images/arrow_white_next.gif" alt="Siguiente capítulo" width="12" height="15" border="0"><\/a>', 'jer', '18');
